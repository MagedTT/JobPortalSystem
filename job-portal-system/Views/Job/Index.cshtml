@model IEnumerable<job_portal_system.Models.ViewModels.JobViewModel>
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Find Your Perfect Job";
}

<link href="~/css/pages/jobs.css" rel="stylesheet" />

<div class="jobs-page">
    <div class="container">
        <!-- Page Header -->
        <div class="jobs-header">
            <h1>Discover Amazing <span style="background: linear-gradient(135deg, #238636 0%, #2ea043 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Opportunities</span></h1>
            <p>Browse through thousands of job listings and find your dream career</p>
        </div>

        <!-- Search and Filter Bar -->
        <div class="job-search-bar">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="search-input-group">
                            <i class="bi bi-search"></i>
                            <input type="text" name="search" class="form-control" placeholder="Search by job title, company, or keywords..." />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <select name="location" class="form-select filter-select">
                            <option value="">All Locations</option>
                            <option value="Remote">Remote</option>
                            <option value="Cairo">Cairo</option>
                            <option value="Alexandria">Alexandria</option>
                            <option value="Giza">Giza</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select name="jobType" class="form-select filter-select">
                            <option value="">Job Type</option>
                            <option value="0">Full Time</option>
                            <option value="1">Part Time</option>
                        </select>
                    </div>
                    <div class="col-md-1">
                        <button type="submit" class="btn btn-job-apply w-100" style="height: 50px;">
                            <i class="bi bi-funnel"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Job Listings -->
        @if (!Model.Any())
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="bi bi-briefcase"></i>
                </div>
                <h3>No Jobs Found</h3>
                <p>There are no job listings available at the moment. Check back later!</p>
                @if (User.IsInRole("Employer"))
                {
                    <a asp-action="Create" class="btn btn-job-apply">
                        <i class="bi bi-plus-circle"></i> Post Your First Job
                    </a>
                }
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var job in Model)
                {
                    <div class="col-lg-6">
                        <div class="job-card">
                            <div class="job-card-header">
                                <div class="company-logo">
                                    @job.CompanyName.Substring(0, Math.Min(2, job.CompanyName.Length)).ToUpper()
                                </div>
                                <span class="job-badge @(job.JobType.ToLower() == "fulltime" || job.JobType == "0" ? "full-time" : "part-time")">
                                    @(job.JobType == "0" || job.JobType.ToLower() == "fulltime" ? "Full Time" : "Part Time")
                                </span>
                            </div>

                            <div class="job-card-body">
                                <h3 class="job-title">@job.Title</h3>
                                <div class="job-company">
                                    <i class="bi bi-building"></i>
                                    <span>@job.CompanyName</span>
                                </div>

                                <p class="job-description">@job.Description</p>

                                <div class="job-meta">
                                    <div class="meta-item">
                                        <i class="bi bi-geo-alt-fill"></i>
                                        <span>@job.Location</span>
                                    </div>
                                    <div class="meta-item">
                                        <i class="bi bi-calendar-event"></i>
                                        <span>@job.CreatedAt.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    <div class="meta-item">
                                        <i class="bi bi-clock-history"></i>
                                        <span>@job.YearsOfExperience+ years exp</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(job.CategoryName))
                                    {
                                        <div class="meta-item">
                                            <i class="bi bi-tag-fill"></i>
                                            <span>@job.CategoryName</span>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="job-card-footer">
                                <div class="job-salary">
                                    <span class="job-salary-label">Salary</span>
                                    @job.Salary.ToString("C0")
                                </div>

                                <div class="job-actions">
                                    <a asp-action="Details" asp-route-id="@job.Id" class="btn-job btn-job-view">
                                        <i class="bi bi-eye"></i> View
                                    </a>

                                    @if (User.IsInRole("JobSeeker"))
                                    {
                                        @if (job.HasApplied)
                                        {
                                            <button class="btn-job btn-job-applied" disabled>
                                                <i class="bi bi-check-circle-fill"></i> Applied
                                            </button>
                                        }
                                        else
                                        {
                                            <a asp-action="Apply" asp-route-id="@job.Id" class="btn-job btn-job-apply">
                                                <i class="bi bi-send"></i> Apply
                                            </a>
                                        }
                                    }
                                    else if (!User.Identity.IsAuthenticated)
                                    {
                                        <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("Apply", "Job", new { id = job.Id })" class="btn-job btn-job-apply">
                                            <i class="bi bi-send"></i> Apply
                                        </a>
                                    }
                                    else if (User.IsInRole("Employer"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@job.Id" class="btn-job btn-job-view">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination (if needed) -->
            <div class="text-center mt-5">
                <p style="color: #8b949e;">Showing @Model.Count() jobs</p>
            </div>
        }
    </div>
</div>

