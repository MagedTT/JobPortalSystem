@model job_portal_system.Models.Domain.User

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow rounded-4 border-0">
        <div class="card-body p-4">
            <h3 class="text-center mb-4">My Profile</h3>

            <div class="text-center mb-3">
                <i class="bi bi-person-circle" style="font-size: 80px; color: #0d6efd;"></i>
            </div>

            <dl class="row">
                <dt class="col-sm-4">Username:</dt>
                <dd class="col-sm-8">@Model.UserName</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Role:</dt>
                <dd class="col-sm-8">@Model.Role</dd>

                <dt class="col-sm-4">Phone Number:</dt>
                <dd class="col-sm-8">@Model.PhoneNumber ?? "N/A"</dd>
            </dl>

            <div class="text-center mt-4">
                <a asp-action="Logout" class="btn btn-outline-danger rounded-pill px-4">Logout</a>
            </div>
        </div>
    </div>
</div>
