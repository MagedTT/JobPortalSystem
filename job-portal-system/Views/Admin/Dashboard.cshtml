@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h2 class="fw-semibold mb-4 d-flex align-items-center gap-3" style="font-size:2.1rem;">
        <i class="bi bi-speedometer2 text-primary" style="font-size:2.5rem;"></i>
        <span>Admin Dashboard</span>
    </h2>

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-lg rounded-4 p-4 text-center bg-dark text-light admin-stat-card">
                <div class="text-primary mb-2">
                    <i class="bi bi-people-fill fs-2"></i>
                </div>
                <h6 class="text-secondary">Total Users</h6>
                <h3 class="fw-bold">@ViewBag.TotalUsers</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-lg rounded-4 p-4 text-center bg-dark text-light admin-stat-card">
                <div class="text-success mb-2">
                    <i class="bi bi-building fs-2"></i>
                </div>
                <h6 class="text-secondary">Employers</h6>
                <h3 class="fw-bold">@ViewBag.TotalEmployers</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-lg rounded-4 p-4 text-center bg-dark text-light admin-stat-card">
                <div class="text-info mb-2">
                    <i class="bi bi-briefcase-fill fs-2"></i>
                </div>
                <h6 class="text-secondary">Jobs</h6>
                <h3 class="fw-bold">@ViewBag.TotalJobs</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-lg rounded-4 p-4 text-center bg-dark text-light admin-stat-card border-start border-4 border-warning">
                <div class="text-warning mb-2">
                    <i class="bi bi-hourglass-split fs-2"></i>
                </div>
                <h6 class="text-secondary">Pending Employers</h6>
                <h3 class="fw-bold text-warning">@ViewBag.PendingEmployers</h3>
                <a asp-action="PendingEmployers" class="btn btn-outline-warning btn-sm mt-2 px-4">Review</a>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-lg rounded-4 p-4 text-center bg-dark text-light admin-stat-card border-start border-4 border-info">
                <div class="text-info mb-2">
                    <i class="bi bi-person-check fs-2"></i>
                </div>
                <h6 class="text-secondary">Pending Job Seekers</h6>
                <h3 class="fw-bold text-info">@ViewBag.PendingJobSeekers</h3>
                <a asp-action="PendingEmployers" class="btn btn-outline-info btn-sm mt-2 px-4">Review</a>
            </div>
        </div>
    </div>


    <div class="row mt-5 gx-4 gy-4 align-items-stretch">
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card h-100 p-4 bg-dark text-light shadow-lg rounded-4">
                <h5 class="fw-semibold mb-3"><i class="bi bi-bar-chart text-primary"></i> Statistics</h5>
                <canvas id="adminStatsChart" height="180"></canvas>
            </div>
        </div>
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card h-100 p-4 bg-dark text-light shadow-lg rounded-4">
                <h5 class="fw-semibold mb-3"><i class="bi bi-pie-chart text-warning"></i> Distribution Overview</h5>
                <canvas id="adminDistributionChart" height="180"></canvas>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-10 mx-auto">
            <div class="quick-links-admin p-4 rounded-4 shadow-lg bg-dark text-light">
                <h4 class="mb-4 fw-semibold"><i class="bi bi-lightning-charge text-warning"></i> Quick Links</h4>
                <div class="row">
                    <div class="col-md-4">
                        <h6 class="mb-2">Last Job Seekers</h6>
                        <ul class="list-unstyled">
                            @foreach (var js in ViewBag.LastJobSeekers ?? new List<dynamic>())
                            {
                                <li><a href="/Admin/JobSeekerDetails/@js.Id" class="quick-link-admin">@js.Name</a></li>
                            }
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h6 class="mb-2">Last Employers</h6>
                        <ul class="list-unstyled">
                            @foreach (var emp in ViewBag.LastEmployers ?? new List<dynamic>())
                            {
                                <li><a href="/Admin/EmployerDetails/@emp.Id" class="quick-link-admin">@emp.CompanyName</a></li>
                            }
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h6 class="mb-2">Last Jobs</h6>
                        <ul class="list-unstyled">
                            @foreach (var job in ViewBag.LastJobs ?? new List<dynamic>())
                            {
                                <li><a href="/Admin/JobDetails/@job.Id" class="quick-link-admin">@job.Title</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('adminStatsChart').getContext('2d');
        const adminStatsChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Users', 'Employers', 'Jobs', 'Pending Employers', 'Pending Job Seekers'],
                datasets: [{
                    label: 'Statistics',
                    data: [@ViewBag.TotalUsers, @ViewBag.TotalEmployers, @ViewBag.TotalJobs, @ViewBag.PendingEmployers, @ViewBag.PendingJobSeekers],
                    backgroundColor: [
                        'rgba(46, 160, 67, 0.7)',
                        'rgba(56, 139, 253, 0.7)',
                        'rgba(56, 139, 253, 0.5)',
                        'rgba(210, 153, 34, 0.7)',
                        'rgba(23, 162, 184, 0.7)'
                    ],
                    borderColor: [
                        'rgba(46, 160, 67, 1)',
                        'rgba(56, 139, 253, 1)',
                        'rgba(56, 139, 253, 1)',
                        'rgba(210, 153, 34, 1)',
                        'rgba(23, 162, 184, 1)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false },
                    title: {
                        display: true,
                        text: 'Admin Portal Statistics'
                    }
                }
            }
        });

        // Second chart: distribution (example: doughnut)
        const ctx2 = document.getElementById('adminDistributionChart').getContext('2d');
        const adminDistributionChart = new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ['Users', 'Employers', 'Job Seekers', 'Jobs'],
                datasets: [{
                    label: 'Distribution',
                    data: [@ViewBag.TotalUsers, @ViewBag.TotalEmployers, (@ViewBag.TotalUsers - @ViewBag.TotalEmployers), @ViewBag.TotalJobs],
                    backgroundColor: [
                        'rgba(46, 160, 67, 0.7)',
                        'rgba(56, 139, 253, 0.7)',
                        'rgba(210, 153, 34, 0.7)',
                        'rgba(56, 139, 253, 0.5)'
                    ],
                    borderColor: [
                        'rgba(46, 160, 67, 1)',
                        'rgba(56, 139, 253, 1)',
                        'rgba(210, 153, 34, 1)',
                        'rgba(56, 139, 253, 1)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'bottom' },
                    title: {
                        display: true,
                        text: 'Distribution Overview'
                    }
                }
            }
        });
    </script>
}
