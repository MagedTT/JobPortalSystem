@model job_portal_system.Models.Domain.ContactMessage
@{
    ViewData["Title"] = "Message Details";
}

<link href="~/css/pages/jobs.css" rel="stylesheet" />

<div class="job-details-page">
    <div class="container" style="padding-top: 80px;">
        <!-- Back Button -->
        <div class="mb-4">
            <a asp-action="Messages" class="btn-job btn-job-view">
                <i class="bi bi-arrow-left"></i> Back to Messages
            </a>
        </div>

        <div class="row g-4">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Message Header -->
                <div class="job-details-card">
                    <div class="text-center mb-4">
                        <div style="width: 80px; height: 80px; border-radius: 50%; background: rgba(56, 139, 253, 0.2); display: flex; align-items: center; justify-content: center; margin: 0 auto 20px;">
                            <i class="bi bi-envelope-fill" style="font-size: 2.5rem; color: #388bfd;"></i>
                        </div>
                        <h1 class="job-details-title">@Model.Subject</h1>
                        <div class="job-details-company" style="justify-content: center;">
                            <i class="bi bi-person"></i>
                            <span>@Model.Name</span>
                        </div>
                    </div>

                    <!-- Status Badge -->
                    <div class="text-center mb-4">
                        @if (!Model.IsRead)
                        {
                            <span class="job-badge" style="background: rgba(56, 139, 253, 0.15); color: #388bfd; border: 1px solid rgba(56, 139, 253, 0.3); font-size: 1rem; padding: 10px 20px;">
                                <i class="bi bi-envelope"></i> New Message
                            </span>
                        }
                        else
                        {
                            <span class="job-badge" style="background: rgba(46, 160, 67, 0.15); color: #2ea043; border: 1px solid rgba(46, 160, 67, 0.3); font-size: 1rem; padding: 10px 20px;">
                                <i class="bi bi-check-circle"></i> Read
                            </span>
                        }
                    </div>

                    <!-- Contact Details -->
                    <div class="job-details-meta" style="justify-content: center; padding-bottom: 30px; border-bottom: 1px solid rgba(255, 255, 255, 0.1); margin-bottom: 30px;">
                        <div class="meta-item">
                            <i class="bi bi-envelope-fill"></i>
                            <strong>@Model.Email</strong>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <div class="meta-item">
                                <i class="bi bi-telephone-fill"></i>
                                <strong>@Model.Phone</strong>
                            </div>
                        }
                        <div class="meta-item">
                            <i class="bi bi-calendar-fill"></i>
                            <strong>@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</strong>
                        </div>
                    </div>

                    <!-- Message Content -->
                    <div class="details-section">
                        <h2 class="section-title">
                            <i class="bi bi-chat-left-text"></i>
                            Message
                        </h2>
                        <div class="section-content" style="white-space: pre-line; background: rgba(255, 255, 255, 0.03); padding: 20px; border-radius: 10px; border: 1px solid rgba(255, 255, 255, 0.1);">
                            @Model.Message
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Sender Info -->
                <div class="job-details-card">
                    <h3 class="section-title" style="font-size: 1.3rem; margin-bottom: 20px;">
                        <i class="bi bi-person-circle"></i>
                        Sender Information
                    </h3>

                    <div style="background: rgba(255, 255, 255, 0.03); padding: 15px; border-radius: 8px; margin-bottom: 15px;">
                        <div style="margin-bottom: 12px;">
                            <small style="color: #8b949e; display: block; margin-bottom: 5px;">Name</small>
                            <strong style="color: #ffffff;">@Model.Name</strong>
                        </div>
                        <div style="margin-bottom: 12px;">
                            <small style="color: #8b949e; display: block; margin-bottom: 5px;">Email</small>
                            <a href="mailto:@Model.Email" style="color: #388bfd; text-decoration: none;">@Model.Email</a>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <div style="margin-bottom: 12px;">
                                <small style="color: #8b949e; display: block; margin-bottom: 5px;">Phone</small>
                                <a href="tel:@Model.Phone" style="color: #388bfd; text-decoration: none;">@Model.Phone</a>
                            </div>
                        }
                    </div>
                </div>

                <!-- Timeline -->
                <div class="job-details-card mt-4">
                    <h3 class="section-title" style="font-size: 1.3rem; margin-bottom: 20px;">
                        <i class="bi bi-clock-history"></i>
                        Timeline
                    </h3>

                    <div class="timeline">
                        <div class="timeline-item" style="padding: 15px; background: rgba(56, 139, 253, 0.1); border-left: 3px solid #388bfd; border-radius: 8px; margin-bottom: 15px;">
                            <div style="color: #388bfd; font-weight: 600; margin-bottom: 5px;">
                                <i class="bi bi-envelope-fill"></i> Message Received
                            </div>
                            <div style="color: #8b949e; font-size: 0.9rem;">
                                @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                            </div>
                        </div>

                        @if (Model.IsRead && Model.ReadAt.HasValue)
                        {
                            <div class="timeline-item" style="padding: 15px; background: rgba(46, 160, 67, 0.1); border-left: 3px solid #2ea043; border-radius: 8px;">
                                <div style="color: #2ea043; font-weight: 600; margin-bottom: 5px;">
                                    <i class="bi bi-check-circle-fill"></i> Marked as Read
                                </div>
                                <div style="color: #8b949e; font-size: 0.9rem;">
                                    @Model.ReadAt.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Actions -->
                <div class="job-details-card mt-4">
                    <h3 class="section-title" style="font-size: 1.3rem; margin-bottom: 20px;">
                        <i class="bi bi-gear"></i>
                        Actions
                    </h3>

                    <div class="d-flex flex-column gap-3">
                        <a href="mailto:@Model.Email?subject=Re: @Model.Subject" class="btn-job btn-job-apply w-100" style="justify-content: center;">
                            <i class="bi bi-reply-fill"></i> Reply via Email
                        </a>

                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="w-100" onsubmit="return confirm('Are you sure you want to delete this message?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn-job w-100" style="background: rgba(248, 81, 73, 0.15); color: #f85149; border: 2px solid rgba(248, 81, 73, 0.3); justify-content: center;">
                                <i class="bi bi-trash"></i> Delete Message
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
