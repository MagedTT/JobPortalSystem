@model job_portal_system.Models.ViewModels.EmployerProfileViewModel

@{
    ViewData["Title"] = "Company Profile";
}

<link rel="stylesheet" href="~/css/pages/auth.css" />

<div class="auth-section">
    <div class="auth-container">
        <!-- Left Side - Company Summary -->
        <div class="auth-branding">
            <div class="branding-content">
                <div class="logo-wrapper">
                    @if (!string.IsNullOrEmpty(Model.LogoPath))
                    {
                        <img src="@Model.LogoPath" alt="Company Logo" style="width: 100px; height: 100px; border-radius: 20px; object-fit: cover;" />
                    }
                    else
                    {
                        <i class="bi bi-building" style="font-size: 100px; color: #2ea043;"></i>
                    }
                </div>
                <h1 class="branding-title">
                    <span class="gradient-text">@Model.CompanyName</span>
                </h1>
                <p class="branding-subtitle">Employer Profile</p>
                
                <div class="branding-features">
                    <div class="feature-item">
                        <i class="bi bi-briefcase-fill"></i>
                        <span>@Model.TotalJobs active jobs</span>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-geo-alt-fill"></i>
                        <span>@Model.Location</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Industry))
                    {
                        <div class="feature-item">
                            <i class="bi bi-diagram-3-fill"></i>
                            <span>@Model.Industry</span>
                        </div>
                    }
                    @if (Model.IsApproved)
                    {
                        <div class="feature-item">
                            <i class="bi bi-check-circle-fill"></i>
                            <span class="text-success">Account Approved</span>
                        </div>
                    }
                    else
                    {
                        <div class="feature-item">
                            <i class="bi bi-clock-fill"></i>
                            <span class="text-warning">Pending Approval</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Side - Edit Form -->
        <div class="auth-form-wrapper">
            <div class="auth-card">
                <div class="auth-header">
                    <h2 class="auth-title">Edit Company Profile</h2>
                    <p class="auth-subtitle">Update your company information</p>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert-success-custom">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>@TempData["SuccessMessage"]</span>
                    </div>
                }

                <form asp-action="UpdateEmployerProfile" method="post" enctype="multipart/form-data" class="auth-form">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.UserId)
                    @Html.HiddenFor(m => m.LogoPath)
                    @Html.HiddenFor(m => m.IsApproved)
                    @Html.HiddenFor(m => m.TotalJobs)

                    <div class="form-group-auth">
                        <label asp-for="LogoFile" class="form-label-auth">
                            <i class="bi bi-image"></i> Company Logo
                        </label>
                        <input asp-for="LogoFile" type="file" class="form-input-auth" accept="image/*" style="padding: 10px;" />
                        <span asp-validation-for="LogoFile" class="validation-message-auth"></span>
                        @if (!string.IsNullOrEmpty(Model.LogoPath))
                        {
                            <small class="text-muted" style="font-size: 0.85rem;">Current logo will be replaced</small>
                        }
                    </div>

                    <div class="form-group-auth">
                        <label asp-for="CompanyName" class="form-label-auth">
                            <i class="bi bi-building"></i> Company Name
                        </label>
                        <input asp-for="CompanyName" class="form-input-auth" placeholder="Enter company name" />
                        <span asp-validation-for="CompanyName" class="validation-message-auth"></span>
                    </div>

                    <div class="form-group-auth">
                        <label asp-for="Email" class="form-label-auth">
                            <i class="bi bi-envelope"></i> Email
                        </label>
                        <input asp-for="Email" class="form-input-auth" readonly style="background-color: rgba(13, 17, 23, 0.8); cursor: not-allowed;" />
                        <small class="text-muted" style="font-size: 0.85rem;">Email cannot be changed</small>
                    </div>

                    <div class="form-group-auth">
                        <label asp-for="PhoneNumber" class="form-label-auth">
                            <i class="bi bi-telephone"></i> Phone Number
                        </label>
                        <input asp-for="PhoneNumber" class="form-input-auth" placeholder="Enter phone number" />
                        <span asp-validation-for="PhoneNumber" class="validation-message-auth"></span>
                    </div>

                    <div class="form-group-auth">
                        <label asp-for="Description" class="form-label-auth">
                            <i class="bi bi-file-text"></i> Company Description
                        </label>
                        <textarea asp-for="Description" class="form-input-auth" rows="4" placeholder="Describe your company..." style="resize: vertical; min-height: 100px;"></textarea>
                        <span asp-validation-for="Description" class="validation-message-auth"></span>
                    </div>

                    <div class="form-group-auth">
                        <label asp-for="Location" class="form-label-auth">
                            <i class="bi bi-geo-alt"></i> Location
                        </label>
                        <input asp-for="Location" class="form-input-auth" placeholder="City, Country" />
                        <span asp-validation-for="Location" class="validation-message-auth"></span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Website))
                    {
                        <div class="form-group-auth">
                            <label class="form-label-auth">
                                <i class="bi bi-globe"></i> Website
                            </label>
                            <input value="@Model.Website" class="form-input-auth" readonly style="background-color: rgba(13, 17, 23, 0.8); cursor: not-allowed;" />
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Industry))
                    {
                        <div class="form-group-auth">
                            <label class="form-label-auth">
                                <i class="bi bi-diagram-3"></i> Industry
                            </label>
                            <input value="@Model.Industry" class="form-input-auth" readonly style="background-color: rgba(13, 17, 23, 0.8); cursor: not-allowed;" />
                        </div>
                    }

                    <button type="submit" class="btn-auth btn-auth-primary">
                        <span>Update Profile</span>
                        <i class="bi bi-check-circle"></i>
                    </button>

                    <div class="auth-footer">
                        <a asp-action="Security" class="back-to-login">
                            <i class="bi bi-shield-lock"></i>
                            <span>Change Password</span>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
