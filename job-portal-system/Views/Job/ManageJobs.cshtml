@model IEnumerable<job_portal_system.Models.ViewModels.JobViewModel>
@{
    ViewData["Title"] = "Manage My Jobs";
}

<link href="~/css/pages/jobs.css" rel="stylesheet" />

<div class="jobs-page">
    <div class="container" style="padding-top: 80px;">
        <!-- Page Header -->
        <div class="jobs-header">
            <h1>
                <i class="bi bi-briefcase-fill" style="color: #2ea043;"></i>
                Manage <span style="background: linear-gradient(135deg, #238636 0%, #2ea043 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">My Jobs</span>
            </h1>
            <p>View and manage all your posted jobs</p>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success" style="background: rgba(46, 160, 67, 0.15); border: 1px solid rgba(46, 160, 67, 0.3); color: #2ea043; border-radius: 10px; margin-bottom: 30px;">
                <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" style="background: rgba(248, 81, 73, 0.15); border: 1px solid rgba(248, 81, 73, 0.3); color: #f85149; border-radius: 10px; margin-bottom: 30px;">
                <i class="bi bi-exclamation-circle-fill"></i> @TempData["Error"]
            </div>
        }

        <!-- Statistics -->
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="job-details-card" style="padding: 20px; text-align: center;">
                    <div style="color: #2ea043; font-size: 2rem; margin-bottom: 10px;">
                        <i class="bi bi-briefcase"></i>
                    </div>
                    <h3 style="color: #ffffff; font-size: 1.8rem; margin-bottom: 5px;">@Model.Count()</h3>
                    <p style="color: #8b949e; margin: 0;">Total Jobs</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="job-details-card" style="padding: 20px; text-align: center;">
                    <div style="color: #388bfd; font-size: 2rem; margin-bottom: 10px;">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <h3 style="color: #ffffff; font-size: 1.8rem; margin-bottom: 5px;">@Model.Count(j => j.IsActive)</h3>
                    <p style="color: #8b949e; margin: 0;">Active Jobs</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="job-details-card" style="padding: 20px; text-align: center;">
                    <div style="color: #fbbc05; font-size: 2rem; margin-bottom: 10px;">
                        <i class="bi bi-people"></i>
                    </div>
                    <h3 style="color: #ffffff; font-size: 1.8rem; margin-bottom: 5px;">@Model.Sum(j => j.ApplicationsCount)</h3>
                    <p style="color: #8b949e; margin: 0;">Total Applications</p>
                </div>
            </div>
        </div>

        <!-- Quick Action -->
        <div class="mb-4">
            <a asp-controller="Job" asp-action="Create" class="btn-job btn-job-apply">
                <i class="bi bi-plus-circle"></i> Post New Job
            </a>
        </div>

        <!-- Jobs List -->
        @if (!Model.Any())
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="bi bi-inbox"></i>
                </div>
                <h3>No Jobs Posted Yet</h3>
                <p>You haven't posted any jobs yet. Click the button above to post your first job!</p>
                <a asp-controller="Job" asp-action="Create" class="btn-job btn-job-apply" style="display: inline-flex;">
                    <i class="bi bi-plus-circle"></i> Post Your First Job
                </a>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var job in Model)
                {
                    <div class="col-12">
                        <div class="job-card" style="padding: 25px;">
                            <div class="row align-items-center">
                                <!-- Left: Job Info -->
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start gap-3">
                                        <div style="width: 60px; height: 60px; border-radius: 12px; background: linear-gradient(135deg, #238636, #2ea043); display: flex; align-items-center; justify-content: center; font-size: 1.5rem; color: #ffffff; font-weight: bold; flex-shrink: 0;">
                                            <i class="bi bi-briefcase"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h3 class="job-title" style="margin-bottom: 8px;">
                                                @job.Title
                                            </h3>
                                            <div class="job-company" style="margin-bottom: 12px;">
                                                <i class="bi bi-building"></i>
                                                <span>@job.CompanyName</span>
                                            </div>
                                            <div class="job-meta">
                                                <div class="meta-item">
                                                    <i class="bi bi-geo-alt"></i>
                                                    <span>@job.Location</span>
                                                </div>
                                                <div class="meta-item">
                                                    <i class="bi bi-cash"></i>
                                                    <span>$@job.Salary.ToString("N0")</span>
                                                </div>
                                                <div class="meta-item">
                                                    <i class="bi bi-calendar3"></i>
                                                    <span>Posted: @job.CreatedAt.ToString("MMM dd, yyyy")</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Middle: Status & Stats -->
                                <div class="col-md-3">
                                    <div style="padding: 15px 0;">
                                        <div style="margin-bottom: 15px;">
                                            <small style="color: #8b949e; display: block; margin-bottom: 5px;">Status</small>
                                            @if (job.IsActive)
                                            {
                                                <span class="job-badge" style="background: rgba(46, 160, 67, 0.15); color: #2ea043; border: 1px solid rgba(46, 160, 67, 0.3);">
                                                    <i class="bi bi-check-circle"></i> Active
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="job-badge" style="background: rgba(248, 81, 73, 0.15); color: #f85149; border: 1px solid rgba(248, 81, 73, 0.3);">
                                                    <i class="bi bi-x-circle"></i> Inactive
                                                </span>
                                            }
                                        </div>
                                        <div>
                                            <small style="color: #8b949e; display: block; margin-bottom: 5px;">Applications</small>
                                            <div style="display: flex; align-items: center; gap: 8px;">
                                                <i class="bi bi-people" style="color: #388bfd; font-size: 1.2rem;"></i>
                                                <span style="color: #ffffff; font-size: 1.5rem; font-weight: 600;">@job.ApplicationsCount</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Right: Actions -->
                                <div class="col-md-3 text-end">
                                    <div class="d-flex flex-column gap-2">
                                        <a asp-controller="Job" asp-action="Details" asp-route-id="@job.Id" class="btn-job btn-job-view" style="justify-content: center;">
                                            <i class="bi bi-eye"></i> View Details
                                        </a>
                                        <a asp-controller="Job" asp-action="Edit" asp-route-id="@job.Id" class="btn-job" style="background: rgba(56, 139, 253, 0.15); color: #388bfd; border: 2px solid rgba(56, 139, 253, 0.3); justify-content: center;">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        @if (job.ApplicationsCount > 0)
                                        {
                                            <a asp-controller="Employer" asp-action="Applicants" asp-route-jobId="@job.Id" class="btn-job btn-job-apply" style="justify-content: center;">
                                                <i class="bi bi-people"></i> View Applicants (@job.ApplicationsCount)
                                            </a>
                                        }
                                        <form asp-controller="Job" asp-action="Delete" asp-route-id="@job.Id" method="get" class="w-100">
                                            <button type="submit" class="btn-job w-100" style="background: rgba(248, 81, 73, 0.15); color: #f85149; border: 2px solid rgba(248, 81, 73, 0.3); justify-content: center;" onclick="return confirm('Are you sure you want to delete this job?');">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
