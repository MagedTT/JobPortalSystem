@model job_portal_system.Models.DTOs.ForgotPasswordDto

@{
    ViewData["Title"] = "Forgot Password";
}

<link rel="stylesheet" href="~/css/pages/auth.css" />

<div class="auth-section forgot-password-section">
    <div class="auth-container-small">
        <div class="auth-card">
            <div class="auth-header">
                <div class="forgot-icon">
                    <i class="bi bi-shield-lock"></i>
                </div>
                <h2 class="auth-title">Forgot Password?</h2>
                <p class="auth-subtitle">No worries! Enter your email and we'll send you reset instructions</p>
            </div>

            <form asp-action="ForgotPassword" method="post" class="auth-form" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group-auth">
                    <label asp-for="Email" class="form-label-auth">
                        <i class="bi bi-envelope"></i> Email Address
                    </label>
                    <input asp-for="Email" type="email" class="form-input-auth" placeholder="your.email@example.com" autocomplete="email" autofocus />
                    <span asp-validation-for="Email" class="validation-message-auth"></span>
                </div>

                <button type="submit" class="btn-auth btn-auth-primary">
                    <span>Send Reset Link</span>
                    <i class="bi bi-send"></i>
                </button>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success-custom">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>@ViewBag.Message</span>
                    </div>
                }

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger-custom">
                        <i class="bi bi-exclamation-circle-fill"></i>
                        <span>@ViewBag.Error</span>
                    </div>
                }

                <div class="auth-footer">
                    <a asp-controller="Account" asp-action="Login" class="back-to-login">
                        <i class="bi bi-arrow-left"></i>
                        <span>Back to Login</span>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
