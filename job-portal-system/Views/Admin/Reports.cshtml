@model job_portal_system.Models.ViewModels.ReportsViewModel

@{
    ViewData["Title"] = "Reports";
}

<style>
    .reports-container {
        background: linear-gradient(135deg, #0d1117 0%, #161b22 50%, #0d1117 100%);
        min-height: 100vh;
        padding: 2rem;
    }

    .reports-header {
        background: rgba(22, 27, 34, 0.95);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    }

    .reports-header h2 {
        color: #f0f6fc;
        font-weight: 800;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .reports-header h2 i {
        color: #2ea043;
        font-size: 2.5rem;
    }

    .nav-tabs {
        border-bottom: 2px solid rgba(46, 160, 67, 0.3);
        background: rgba(13, 17, 23, 0.6);
        padding: 1rem 1rem 0;
        border-radius: 12px 12px 0 0;
    }

    .nav-tabs .nav-link {
        color: #8b949e;
        border: none;
        padding: 1rem 1.5rem;
        border-radius: 8px 8px 0 0;
        transition: all 0.3s ease;
        font-weight: 600;
        background: transparent;
        margin-right: 0.5rem;
    }

    .nav-tabs .nav-link:hover {
        color: #c9d1d9;
        background: rgba(255, 255, 255, 0.05);
    }

    .nav-tabs .nav-link.active {
        color: #ffffff;
        background: linear-gradient(135deg, #238636 0%, #2ea043 100%);
        border: none;
        box-shadow: 0 4px 12px rgba(46, 160, 67, 0.3);
    }

    .nav-tabs .nav-link i {
        margin-right: 0.5rem;
    }

    .tab-content {
        background: rgba(22, 27, 34, 0.95);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 0 0 12px 12px;
        padding: 0;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    }

    .report-card {
        background: transparent;
        border: none;
        border-radius: 0;
    }

    .report-card-header {
        background: linear-gradient(135deg, rgba(35, 134, 54, 0.2) 0%, rgba(46, 160, 67, 0.1) 100%);
        border-bottom: 2px solid rgba(46, 160, 67, 0.3);
        padding: 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .report-card-header h5 {
        color: #f0f6fc;
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .report-card-header h5 i {
        color: #2ea043;
        font-size: 1.5rem;
    }

    .export-btn {
        background: linear-gradient(135deg, #238636 0%, #2ea043 100%);
        color: #ffffff;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        box-shadow: 0 4px 12px rgba(46, 160, 67, 0.3);
    }

    .export-btn:hover {
        background: linear-gradient(135deg, #2ea043 0%, #3fb950 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(46, 160, 67, 0.5);
        color: #ffffff;
    }

    .export-btn i {
        font-size: 1.2rem;
    }

    .report-table-wrapper {
        padding: 1.5rem;
        background: rgba(13, 17, 23, 0.3);
    }

    .table {
        color: #c9d1d9;
        margin-bottom: 0;
        background: transparent;
    }

    .table-responsive {
        background: transparent;
        border-radius: 12px;
        overflow: hidden;
        margin: 0;
    }

    /* Match admin.css table styling */
    .report-table {
        border-radius: 12px;
        overflow: hidden;
        font-size: 1rem;
        background: transparent;
    }

    .report-table th,
    .report-table td {
        vertical-align: middle;
        border-color: #30363d;
    }

    .report-table thead th {
        background: #21262d;
        color: #d29922;
        font-weight: 600;
        border-bottom: 2px solid #30363d;
        padding: 1rem;
    }

    .report-table tbody tr {
        transition: background 0.15s;
        background: rgba(13, 17, 23, 0.4);
    }

    .report-table tbody tr:hover {
        background: #161b22;
    }

    .report-table tbody td {
        padding: 1rem;
        color: #c9d1d9;
        font-size: 0.95rem;
        border-color: #30363d;
    }

    .report-table tbody td strong {
        color: #f0f6fc;
        font-weight: 700;
    }

    .badge {
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.85rem;
    }

    .badge.bg-success {
        background: linear-gradient(135deg, #238636 0%, #2ea043 100%) !important;
        color: #ffffff;
    }

    .badge.bg-warning {
        background: linear-gradient(135deg, #9e6a03 0%, #bf8700 100%) !important;
        color: #ffffff;
    }

    .badge.bg-danger {
        background: linear-gradient(135deg, #da3633 0%, #f85149 100%) !important;
        color: #ffffff;
    }

    .badge.bg-info {
        background: linear-gradient(135deg, #0969da 0%, #1f6feb 100%) !important;
        color: #ffffff;
    }

    .badge.bg-primary {
        background: linear-gradient(135deg, #0969da 0%, #1f6feb 100%) !important;
        color: #ffffff;
    }

    .badge.bg-secondary {
        background: linear-gradient(135deg, #373e47 0%, #6e7681 100%) !important;
        color: #ffffff;
    }

    .total-records {
        padding: 1rem 1.5rem;
        background: rgba(46, 160, 67, 0.05);
        border-top: 2px solid rgba(46, 160, 67, 0.3);
        color: #8b949e;
        font-size: 0.95rem;
    }

    .total-records strong {
        color: #2ea043;
        font-weight: 700;
    }

    /* Scrollbar styling */
    .table-responsive::-webkit-scrollbar {
        height: 10px;
    }

    .table-responsive::-webkit-scrollbar-track {
        background: rgba(13, 17, 23, 0.8);
        border-radius: 0 0 8px 8px;
    }

    .table-responsive::-webkit-scrollbar-thumb {
        background: linear-gradient(90deg, #238636 0%, #2ea043 100%);
        border-radius: 5px;
    }

    .table-responsive::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(90deg, #2ea043 0%, #3fb950 100%);
    }

    /* Empty state */
    .table tbody tr:empty {
        display: none;
    }
</style>

<div class="reports-container">
    <div class="reports-header">
        <h2>
            <i class="bi bi-bar-chart-line"></i>
            <span>System Reports & Analytics</span>
        </h2>
    </div>

    <!-- Tabs Navigation -->
    <ul class="nav nav-tabs" id="reportTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="users-tab" data-bs-toggle="tab" data-bs-target="#users" type="button" role="tab">
                <i class="bi bi-people-fill"></i> Users
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="jobs-tab" data-bs-toggle="tab" data-bs-target="#jobs" type="button" role="tab">
                <i class="bi bi-briefcase-fill"></i> Jobs
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="applications-tab" data-bs-toggle="tab" data-bs-target="#applications" type="button" role="tab">
                <i class="bi bi-file-earmark-text-fill"></i> Applications
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="employers-tab" data-bs-toggle="tab" data-bs-target="#employers" type="button" role="tab">
                <i class="bi bi-building-fill"></i> Employers
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="jobseekers-tab" data-bs-toggle="tab" data-bs-target="#jobseekers" type="button" role="tab">
                <i class="bi bi-person-badge-fill"></i> Job Seekers
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="reportTabsContent">
        
        <!-- Users Report Tab -->
        <div class="tab-pane fade show active" id="users" role="tabpanel">
            <div class="report-card">
                <div class="report-card-header">
                    <h5><i class="bi bi-people-fill"></i> Users Report</h5>
                    <a asp-action="ExportUsersToExcel" class="export-btn">
                        <i class="bi bi-file-earmark-excel-fill"></i> Export to Excel
                    </a>
                </div>
                <div class="report-table-wrapper">
                    <div class="table-responsive">
                        <table class="table report-table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Is Active</th>
                                    <th>Email Confirmed</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.UserReports)
                                {
                                    <tr>
                                        <td>@user.Email</td>
                                        <td><span class="badge bg-info">@user.Role</span></td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            @if (user.EmailConfirmed)
                                            {
                                                <span class="badge bg-success">Verified</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Unverified</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="total-records">
                    Total Records: <strong>@Model.UserReports.Count</strong>
                </div>
            </div>
        </div>

        <!-- Jobs Report Tab -->
        <div class="tab-pane fade" id="jobs" role="tabpanel">
            <div class="report-card">
                <div class="report-card-header">
                    <h5><i class="bi bi-briefcase-fill"></i> Jobs Report</h5>
                    <a asp-action="ExportJobsToExcel" class="export-btn">
                        <i class="bi bi-file-earmark-excel-fill"></i> Export to Excel
                    </a>
                </div>
                <div class="report-table-wrapper">
                    <div class="table-responsive">
                        <table class="table report-table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Company</th>
                                    <th>Category</th>
                                    <th>Location</th>
                                    <th>Salary</th>
                                    <th>Job Type</th>
                                    <th>Applications</th>
                                    <th>Posted Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var job in Model.JobReports)
                                {
                                    <tr>
                                        <td><strong>@job.Title</strong></td>
                                        <td>@job.Company</td>
                                        <td><span class="badge bg-secondary">@job.Category</span></td>
                                        <td>@job.Location</td>
                                        <td><strong class="text-success">$@job.Salary.ToString("N0")</strong></td>
                                        <td><span class="badge bg-info">@job.JobType</span></td>
                                        <td><span class="badge bg-primary">@job.ApplicationsCount</span></td>
                                        <td>@job.PostedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (job.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="total-records">
                    Total Records: <strong>@Model.JobReports.Count</strong>
                </div>
            </div>
        </div>

        <!-- Applications Report Tab -->
        <div class="tab-pane fade" id="applications" role="tabpanel">
            <div class="report-card">
                <div class="report-card-header">
                    <h5><i class="bi bi-file-earmark-text-fill"></i> Applications Report</h5>
                    <a asp-action="ExportApplicationsToExcel" class="export-btn">
                        <i class="bi bi-file-earmark-excel-fill"></i> Export to Excel
                    </a>
                </div>
                <div class="report-table-wrapper">
                    <div class="table-responsive">
                        <table class="table report-table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>Job Title</th>
                                    <th>Company</th>
                                    <th>Applicant</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Applied Date</th>
                                    <th>Experience</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var app in Model.ApplicationReports)
                                {
                                    <tr>
                                        <td><strong>@app.JobTitle</strong></td>
                                        <td>@app.Company</td>
                                        <td>@app.ApplicantName</td>
                                        <td>@app.ApplicantEmail</td>
                                        <td>
                                            @if (app.Status == "Pending")
                                            {
                                                <span class="badge bg-warning">Pending</span>
                                            }
                                            else if (app.Status == "Accepted")
                                            {
                                                <span class="badge bg-success">Accepted</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Rejected</span>
                                            }
                                        </td>
                                        <td>@app.AppliedDate.ToString("MMM dd, yyyy")</td>
                                        <td><span class="badge bg-info">@app.ExperienceYears years</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="total-records">
                    Total Records: <strong>@Model.ApplicationReports.Count</strong>
                </div>
            </div>
        </div>

        <!-- Employers Report Tab -->
        <div class="tab-pane fade" id="employers" role="tabpanel">
            <div class="report-card">
                <div class="report-card-header">
                    <h5><i class="bi bi-building-fill"></i> Employers Report</h5>
                    <a asp-action="ExportEmployersToExcel" class="export-btn">
                        <i class="bi bi-file-earmark-excel-fill"></i> Export to Excel
                    </a>
                </div>
                <div class="report-table-wrapper">
                    <div class="table-responsive">
                        <table class="table report-table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>Company Name</th>
                                    <th>Email</th>
                                    <th>Location</th>
                                    <th>Status</th>
                                    <th>Total Jobs</th>
                                    <th>Active Jobs</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employer in Model.EmployerReports)
                                {
                                    <tr>
                                        <td><strong>@employer.CompanyName</strong></td>
                                        <td>@employer.Email</td>
                                        <td>@employer.Location</td>
                                        <td>
                                            @if (employer.IsApproved)
                                            {
                                                <span class="badge bg-success">Approved</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Pending</span>
                                            }
                                        </td>
                                        <td><span class="badge bg-primary">@employer.TotalJobs</span></td>
                                        <td><span class="badge bg-success">@employer.ActiveJobs</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="total-records">
                    Total Records: <strong>@Model.EmployerReports.Count</strong>
                </div>
            </div>
        </div>

        <!-- Job Seekers Report Tab -->
        <div class="tab-pane fade" id="jobseekers" role="tabpanel">
            <div class="report-card">
                <div class="report-card-header">
                    <h5><i class="bi bi-person-badge-fill"></i> Job Seekers Report</h5>
                    <a asp-action="ExportJobSeekersToExcel" class="export-btn">
                        <i class="bi bi-file-earmark-excel-fill"></i> Export to Excel
                    </a>
                </div>
                <div class="report-table-wrapper">
                    <div class="table-responsive">
                        <table class="table report-table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Education</th>
                                    <th>Experience</th>
                                    <th>Location</th>
                                    <th>Status</th>
                                    <th>Applications</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var seeker in Model.JobSeekerReports)
                                {
                                    <tr>
                                        <td><strong>@seeker.FullName</strong></td>
                                        <td>@seeker.Email</td>
                                        <td>@seeker.Education</td>
                                        <td><span class="badge bg-info">@seeker.ExperienceYears years</span></td>
                                        <td>@seeker.Location</td>
                                        <td>
                                            @if (seeker.IsApproved)
                                            {
                                                <span class="badge bg-success">Approved</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Pending</span>
                                            }
                                        </td>
                                        <td><span class="badge bg-primary">@seeker.TotalApplications</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="total-records">
                    Total Records: <strong>@Model.JobSeekerReports.Count</strong>
                </div>
            </div>
        </div>
    </div>
</div>
