@model IEnumerable<job_portal_system.Models.Domain.ContactMessage>
@{
    ViewData["Title"] = "Contact Messages";
}

<link href="~/css/pages/jobs.css" rel="stylesheet" />

<div class="jobs-page">
    <div class="container" style="padding-top: 80px;">
        <!-- Page Header -->
        <div class="jobs-header">
            <h1>
                <i class="bi bi-envelope-fill" style="color: #2ea043;"></i>
                Contact <span style="background: linear-gradient(135deg, #238636 0%, #2ea043 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Messages</span>
            </h1>
            <p>View and manage contact form submissions</p>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success" style="background: rgba(46, 160, 67, 0.15); border: 1px solid rgba(46, 160, 67, 0.3); color: #2ea043; border-radius: 10px; margin-bottom: 30px;">
                <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" style="background: rgba(248, 81, 73, 0.15); border: 1px solid rgba(248, 81, 73, 0.3); color: #f85149; border-radius: 10px; margin-bottom: 30px;">
                <i class="bi bi-exclamation-circle-fill"></i> @TempData["Error"]
            </div>
        }

        <!-- Statistics -->
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="job-details-card" style="padding: 20px; text-align: center;">
                    <div style="color: #388bfd; font-size: 2rem; margin-bottom: 10px;">
                        <i class="bi bi-envelope-fill"></i>
                    </div>
                    <h3 style="color: #ffffff; font-size: 1.8rem; margin-bottom: 5px;">@Model.Count()</h3>
                    <p style="color: #8b949e; margin: 0;">Total Messages</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="job-details-card" style="padding: 20px; text-align: center;">
                    <div style="color: #fbbc05; font-size: 2rem; margin-bottom: 10px;">
                        <i class="bi bi-envelope-open"></i>
                    </div>
                    <h3 style="color: #ffffff; font-size: 1.8rem; margin-bottom: 5px;">@Model.Count(m => !m.IsRead)</h3>
                    <p style="color: #8b949e; margin: 0;">Unread</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="job-details-card" style="padding: 20px; text-align: center;">
                    <div style="color: #2ea043; font-size: 2rem; margin-bottom: 10px;">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <h3 style="color: #ffffff; font-size: 1.8rem; margin-bottom: 5px;">@Model.Count(m => m.IsRead)</h3>
                    <p style="color: #8b949e; margin: 0;">Read</p>
                </div>
            </div>
        </div>

        <!-- Messages List -->
        @if (!Model.Any())
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="bi bi-inbox"></i>
                </div>
                <h3>No Messages Yet</h3>
                <p>Contact form submissions will appear here.</p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var message in Model)
                {
                    <div class="col-12">
                        <div class="job-card" style="padding: 25px; @(!message.IsRead ? "border-left: 4px solid #388bfd;" : "")">
                            <div class="row align-items-center">
                                <!-- Left: Message Info -->
                                <div class="col-md-8">
                                    <div class="d-flex align-items-start gap-3">
                                        <div style="width: 50px; height: 50px; border-radius: 50%; background: @(!message.IsRead ? "rgba(56, 139, 253, 0.2)" : "rgba(46, 160, 67, 0.2)"); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                            <i class="bi @(!message.IsRead ? "bi-envelope-fill" : "bi-envelope-open-fill")" style="font-size: 1.5rem; color: @(!message.IsRead ? "#388bfd" : "#2ea043");"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex align-items-center gap-2 mb-2">
                                                <h3 class="job-title" style="margin-bottom: 0;">@message.Subject</h3>
                                                @if (!message.IsRead)
                                                {
                                                    <span class="job-badge" style="background: rgba(56, 139, 253, 0.15); color: #388bfd; border: 1px solid rgba(56, 139, 253, 0.3); font-size: 0.75rem;">
                                                        <i class="bi bi-circle-fill" style="font-size: 0.5rem;"></i> New
                                                    </span>
                                                }
                                            </div>
                                            <div class="job-company" style="margin-bottom: 12px;">
                                                <i class="bi bi-person"></i>
                                                <span>@message.Name</span>
                                            </div>
                                            <div class="job-meta">
                                                <div class="meta-item">
                                                    <i class="bi bi-envelope"></i>
                                                    <span>@message.Email</span>
                                                </div>
                                                @if (!string.IsNullOrEmpty(message.Phone))
                                                {
                                                    <div class="meta-item">
                                                        <i class="bi bi-telephone"></i>
                                                        <span>@message.Phone</span>
                                                    </div>
                                                }
                                                <div class="meta-item">
                                                    <i class="bi bi-calendar"></i>
                                                    <span>@message.CreatedAt.ToString("MMM dd, yyyy HH:mm")</span>
                                                </div>
                                            </div>
                                            <p style="color: #8b949e; margin-top: 12px; margin-bottom: 0;">
                                                @(message.Message.Length > 150 ? message.Message.Substring(0, 150) + "..." : message.Message)
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Right: Actions -->
                                <div class="col-md-4 text-end">
                                    <div class="d-flex flex-column gap-2">
                                        <a asp-action="Details" asp-route-id="@message.Id" class="btn-job btn-job-apply" style="justify-content: center;">
                                            <i class="bi bi-eye"></i> View Details
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@message.Id" method="post" class="w-100" onsubmit="return confirm('Are you sure you want to delete this message?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn-job w-100" style="background: rgba(248, 81, 73, 0.15); color: #f85149; border: 2px solid rgba(248, 81, 73, 0.3); justify-content: center;">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
