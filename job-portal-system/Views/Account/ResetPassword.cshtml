@model job_portal_system.Models.DTOs.ResetPasswordDto

@{
    ViewData["Title"] = "Reset Password";
}

<link rel="stylesheet" href="~/css/pages/register.css" />

<section class="register-section">
    <div class="register-card">
        <h2>Reset Password</h2>

        <form asp-action="ResetPassword" method="post" class="floating-form">
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- New Password -->
            <div class="form-floating mb-3">
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter new password" />
                <label asp-for="NewPassword"></label>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm new password" />
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-pill">Reset Password</button>

            @if (ViewBag.Message != null)
            {
                <p class="text-success mt-3 text-center">@ViewBag.Message</p>
            }
            @if (ViewBag.Error != null)
            {
                <p class="text-danger mt-3 text-center">@ViewBag.Error</p>
            }
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
