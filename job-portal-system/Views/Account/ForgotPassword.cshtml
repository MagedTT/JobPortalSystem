@model job_portal_system.Models.DTOs.ForgotPasswordDto

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5" style="max-width: 450px;">
    <div class="card shadow rounded-4 border-0">
        <div class="card-body p-4">
            <h3 class="text-center mb-4">Forgot Password</h3>

            <form asp-action="ForgotPassword" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 rounded-pill">Send Reset Link</button>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success text-center mt-3">@ViewBag.Message</div>
                }

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center mt-3">@ViewBag.Error</div>
                }

                <div class="text-center mt-3">
                    <small>
                        Remembered your password?
                        <a asp-controller="Account" asp-action="Login">Login</a>
                    </small>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
