@model IEnumerable<job_portal_system.Models.ViewModels.MessageViewModel>
@{
    ViewData["Title"] = "Inbox";
}

<link href="~/css/pages/jobs.css" rel="stylesheet" />

<div class="jobs-page">
    <div class="container">
        <!-- Page Header -->
        <div class="jobs-header">
            <h1>Message <span style="background: linear-gradient(135deg, #238636 0%, #2ea043 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Inbox</span></h1>
            <p>View and manage your received messages</p>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success" style="background: rgba(46, 160, 67, 0.15); border: 1px solid rgba(46, 160, 67, 0.3); color: #2ea043; border-radius: 10px; margin-bottom: 30px;">
                <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            </div>
        }

        <!-- Navigation Tabs -->
        <div class="job-search-bar" style="padding: 15px 25px; margin-bottom: 30px;">
            <div class="d-flex gap-2">
                <a asp-action="Inbox" class="btn-job btn-job-apply">
                    <i class="bi bi-inbox-fill"></i> Inbox (@Model.Count())
                </a>
                <a asp-action="Sent" class="btn-job btn-job-view">
                    <i class="bi bi-send"></i> Sent
                </a>
            </div>
        </div>

        <!-- Messages Summary -->
        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <div class="job-details-card" style="padding: 20px; text-align: center;">
                    <div style="color: #2ea043; font-size: 2rem; margin-bottom: 10px;">
                        <i class="bi bi-envelope-fill"></i>
                    </div>
                    <h3 style="color: #ffffff; font-size: 1.8rem; margin-bottom: 5px;">@Model.Count()</h3>
                    <p style="color: #8b949e; margin: 0;">Total Messages</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="job-details-card" style="padding: 20px; text-align: center;">
                    <div style="color: #388bfd; font-size: 2rem; margin-bottom: 10px;">
                        <i class="bi bi-envelope-open"></i>
                    </div>
                    <h3 style="color: #ffffff; font-size: 1.8rem; margin-bottom: 5px;">@Model.Count(m => !m.IsRead)</h3>
                    <p style="color: #8b949e; margin: 0;">Unread Messages</p>
                </div>
            </div>
        </div>

        <!-- Messages List -->
        @if (!Model.Any())
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="bi bi-inbox"></i>
                </div>
                <h3>No Messages</h3>
                <p>You don't have any messages in your inbox yet.</p>
                <a asp-controller="Companies" asp-action="Index" class="btn-job btn-job-apply">
                    <i class="bi bi-building"></i> Browse Companies
                </a>
            </div>
        }
        else
        {
            <div class="row g-3">
                @foreach (var message in Model)
                {
                    <div class="col-12">
                        <div class="job-card" style="padding: 20px; @(!message.IsRead ? "border-left: 4px solid #2ea043;" : "")">
                            <div class="row align-items-center">
                                <!-- Left: Message Info -->
                                <div class="col-md-8">
                                    <div class="d-flex align-items-start gap-3">
                                        <div class="company-logo" style="width: 50px; height: 50px; font-size: 1.2rem;">
                                            @message.SenderName.Substring(0, Math.Min(2, message.SenderName.Length)).ToUpper()
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex align-items-center gap-2 mb-2">
                                                <h4 style="color: #ffffff; margin: 0; font-size: 1.1rem;">@message.SenderName</h4>
                                                @if (!message.IsRead)
                                                {
                                                    <span class="job-badge" style="background: rgba(46, 160, 67, 0.15); color: #2ea043; border: 1px solid rgba(46, 160, 67, 0.3); font-size: 0.7rem; padding: 3px 8px;">
                                                        NEW
                                                    </span>
                                                }
                                            </div>
                                            <h5 style="color: #2ea043; margin-bottom: 8px; font-size: 1rem;">@message.Subject</h5>
                                            <p style="color: #8b949e; margin: 0; font-size: 0.9rem; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                                @message.Content
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Middle: Date -->
                                <div class="col-md-2">
                                    <div style="text-align: center;">
                                        <small style="color: #8b949e; display: block; margin-bottom: 3px;">
                                            @message.SentAt.ToString("MMM dd")
                                        </small>
                                        <small style="color: #8b949e;">
                                            @message.SentAt.ToString("hh:mm tt")
                                        </small>
                                    </div>
                                </div>

                                <!-- Right: Actions -->
                                <div class="col-md-2">
                                    <div class="d-flex flex-column gap-2">
                                        <a asp-action="Details" asp-route-id="@message.Id" asp-route-isSent="false" class="btn-job btn-job-view" style="justify-content: center; font-size: 0.85rem; padding: 8px 12px;">
                                            <i class="bi bi-eye"></i> Read
                                        </a>
                                        <a asp-action="Reply" asp-route-id="@message.Id" class="btn-job btn-job-apply" style="justify-content: center; font-size: 0.85rem; padding: 8px 12px;">
                                            <i class="bi bi-reply"></i> Reply
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@message.Id" asp-route-isSent="false" method="post" onsubmit="return confirm('Delete this message?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn-job w-100" style="background: rgba(248, 81, 73, 0.15); color: #f85149; border: 2px solid rgba(248, 81, 73, 0.3); justify-content: center; font-size: 0.85rem; padding: 8px 12px;">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
