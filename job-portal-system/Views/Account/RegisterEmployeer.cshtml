@model job_portal_system.Models.ViewModels.RegisterEmployerViewModel

@{
    ViewData["Title"] = "Register as Employer";
}

<link rel="stylesheet" href="~/css/pages/register.css" />

<section class="register-section">
    <div class="register-card">
        <h2>Register as Employer</h2>

        <form asp-action="RegisterEmployeer" method="post" class="floating-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Company Name -->
            <div class="form-floating mb-3">
                <input asp-for="CompanyName" class="form-control" placeholder="Company Name" />
                <label asp-for="CompanyName"></label>
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>

            <!-- Company Email -->
            <div class="form-floating mb-3">
                <input asp-for="CompanyEmail" type="email" class="form-control" placeholder="Company Email" />
                <label asp-for="CompanyEmail"></label>
                <span asp-validation-for="CompanyEmail" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Optional fields -->
            <div class="form-floating mb-3">
                <input asp-for="Website" class="form-control" placeholder="Company Website" />
                <label asp-for="Website"></label>
                <span asp-validation-for="Website" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Industry" class="form-control" placeholder="Industry" />
                <label asp-for="Industry"></label>
                <span asp-validation-for="Industry" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Register</button>
        </form>

        <div class="text-center mt-3">
            <small>
                Already have an account?
                <a asp-controller="Account" asp-action="Login">Login</a>
            </small>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
