@model EditEmployerViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<form asp-action="EditEmployerProfile" asp-controller="Employer" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.UserId">
    <div class="container mt-5" style="max-width: 600px;">
        <div class="card shadow rounded-4 border-0">
            <div class="card-body p-4">
                <h3 class="text-center mb-4">Update Profile</h3>

                <div class="d-flex justify-content-center align-items-center">
                    @if (Model.LogoPath is null)
                    {
                        <label asp-for="LogoFile">
                            <img src="/Images/defaultImage.jpg" alt="Profile" style="cursor: pointer;"
                                class="profile-image rounded-circle">
                        </label>
                        <input type="file" class="d-none image-input" asp-for="LogoFile" />
                    }

                    else
                    {
                        <label asp-for="LogoFile">
                            <img src="@($"/Images/{Model.LogoPath}")" alt="Profile" style="cursor: pointer;"
                                class="profile-image rounded-circle" asp-for="ImageFile">
                        </label>
                        <input type="file" class="d-none image-input" asp-for="LogoFile" />
                    }
                </div>

                <div class="form-group mb-4">
                    <label asp-for="CompanyName" class="form-label"></label>
                    <input asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Location" class="form-label"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <input type="submit" class="btn btn-success w-100" value="Submit">
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.querySelector('.image-input').addEventListener('change', function (event) {
            document.querySelector('.profile-image').src = window.URL.createObjectURL(event.target.files[0]);
        });
    </script>
}