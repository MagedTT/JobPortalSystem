@model job_portal_system.Models.ViewModels.JobViewModel

@{
    ViewData["Title"] = "Job Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4 py-3">
            <h3 class="mb-0">@Model.Title</h3>
        </div>

        <div class="card-body p-4">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h6 class="text-muted mb-1">Posted On</h6>
                    <p class="mb-0">@Model.CreatedAt.ToShortDateString()</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <h6 class="text-muted mb-1">Salary</h6>
                    <p class="fw-semibold text-success mb-0">@Model.Salary.ToString("C")</p>
                </div>
            </div>

            <hr />

            <div>
                <h6 class="text-muted mb-2">Description</h6>
                <p class="text-secondary" style="white-space: pre-line;">@Model.Description</p>
            </div>
        </div>

        <div class="card-footer bg-light text-end rounded-bottom-4 py-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
