@model job_portal_system.Models.ViewModels.AdminProfileViewModel

@{
    ViewData["Title"] = "Admin Profile";
}

<link rel="stylesheet" href="~/css/pages/auth.css" />

<div class="auth-section">
    <div class="auth-container">
        <!-- Left Side - Admin Summary -->
        <div class="auth-branding">
            <div class="branding-content">
                <div class="logo-wrapper">
                    <i class="bi bi-shield-check" style="font-size: 100px; color: #2ea043;"></i>
                </div>
                <h1 class="branding-title">
                    <span class="gradient-text">@Model.UserName</span>
                </h1>
                <p class="branding-subtitle">Administrator</p>
                
                <div class="branding-features">
                    <div class="feature-item">
                        <i class="bi bi-people-fill"></i>
                        <span>@Model.TotalUsers total users</span>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-building-fill"></i>
                        <span>@Model.TotalEmployers employers</span>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-person-badge-fill"></i>
                        <span>@Model.TotalJobSeekers job seekers</span>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-briefcase-fill"></i>
                        <span>@Model.TotalJobs active jobs</span>
                    </div>
                    @if (Model.PendingEmployers > 0 || Model.PendingJobSeekers > 0)
                    {
                        <div class="feature-item">
                            <i class="bi bi-clock-fill text-warning"></i>
                            <span>@(Model.PendingEmployers + Model.PendingJobSeekers) pending approvals</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Side - Edit Form -->
        <div class="auth-form-wrapper">
            <div class="auth-card">
                <div class="auth-header">
                    <h2 class="auth-title">Edit Profile</h2>
                    <p class="auth-subtitle">Update your admin information</p>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert-success-custom">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>@TempData["SuccessMessage"]</span>
                    </div>
                }

                <form asp-action="UpdateAdminProfile" method="post" class="auth-form">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)

                    <div class="form-group-auth">
                        <label asp-for="UserName" class="form-label-auth">
                            <i class="bi bi-person"></i> Username
                        </label>
                        <input asp-for="UserName" class="form-input-auth" placeholder="Enter username" />
                        <span asp-validation-for="UserName" class="validation-message-auth"></span>
                    </div>

                    <div class="form-group-auth">
                        <label asp-for="Email" class="form-label-auth">
                            <i class="bi bi-envelope"></i> Email
                        </label>
                        <input asp-for="Email" class="form-input-auth" readonly style="background-color: rgba(13, 17, 23, 0.8); cursor: not-allowed;" />
                        <small class="text-muted" style="font-size: 0.85rem;">Email cannot be changed</small>
                    </div>

                    <div class="form-group-auth">
                        <label asp-for="PhoneNumber" class="form-label-auth">
                            <i class="bi bi-telephone"></i> Phone Number
                        </label>
                        <input asp-for="PhoneNumber" class="form-input-auth" placeholder="Enter phone number" />
                        <span asp-validation-for="PhoneNumber" class="validation-message-auth"></span>
                    </div>

                    <div class="auth-divider">
                        <span>Quick Actions</span>
                    </div>

                    <div class="register-buttons">
                        <a asp-controller="Admin" asp-action="Dashboard" class="btn-register">
                            <i class="bi bi-speedometer2"></i>
                            <span>Go to Dashboard</span>
                        </a>
                        <a asp-controller="Admin" asp-action="PendingEmployers" class="btn-register">
                            <i class="bi bi-clock-history"></i>
                            <span>Manage Pending Approvals</span>
                        </a>
                        <a asp-controller="AdminContact" asp-action="Messages" class="btn-register">
                            <i class="bi bi-envelope"></i>
                            <span>View Contact Messages</span>
                        </a>
                    </div>

                    <button type="submit" class="btn-auth btn-auth-primary">
                        <span>Update Profile</span>
                        <i class="bi bi-check-circle"></i>
                    </button>

                    <div class="auth-footer">
                        <a asp-action="Security" class="back-to-login">
                            <i class="bi bi-shield-lock"></i>
                            <span>Change Password</span>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
