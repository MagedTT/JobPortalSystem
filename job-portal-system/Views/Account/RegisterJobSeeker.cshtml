@model job_portal_system.Models.ViewModels.RegisterJobSeekerViewModel
@{
    ViewData["Title"] = "Register as Job Seeker";
}

<link rel="stylesheet" href="~/css/pages/register.css" />

<section class="register-section">
    <div class="register-card">
        <h2>Register as Job Seeker</h2>

        <form asp-action="RegisterJobSeeker" method="post" class="floating-form">
            <div class="form-floating mb-3">
                <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                <label asp-for="FullName">Full Name</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <label asp-for="Email">Email</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <label asp-for="Password">Password</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                <label asp-for="ConfirmPassword">Confirm Password</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Phone" class="form-control" placeholder="Phone" />
                <label asp-for="Phone">Phone</label>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Skills" class="form-control" placeholder="Skills" />
                <label asp-for="Skills">Skills</label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Register</button>
        </form>

        <div class="text-center mt-3">
            <small>
                Already have an account?
                <a asp-controller="Account" asp-action="Login">Login</a>
            </small>
        </div>
    </div>
</section>
