@model EmployerViewModel

@{
    ViewData["Title"] = $"{Model.CompanyName} Profile";
}

<div class="container border border-white rounded-5 p-4" style="background-color: #e4e7ec">
    <div class="row">
        <div class="d-flex align-items-center">
            <div class="col-3">
                @if (Model.LogoPath is not null)
                {
                    <img class="profile-image rounded-circle" src="@($"/Images/{Model.LogoPath}")" alt=" Company Logo" />
                }
                else
                {
                    <img class="profile-image rounded-circle" src="/Images/default_logo.jpg" alt="Default Logo" />
                }
            </div>

            <div class="col-6">
                <h3>@Model.CompanyName</h3>
                <i class="bi bi-geo-alt-fill"></i>
                <span>@Model.Location</span>

                <div class="mt-3">
                    @if (Model.IsApproved)
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Pending Approval</span>
                    }
                </div>
            </div>

            <div class="col-3 d-flex justify-content-center">
                <button class="btn btn-outline-dark" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasEmployerOptions" aria-controls="offcanvasEmployerOptions">
                    More Options
                </button>
            </div>
        </div>
    </div>

    <div class="d-flex flex-column justify-content-center align-items-center">
        <div class="row mt-5 d-flex justify-content-center w-75">
            <h3 class="text-center">About the Company</h3>
            <p class="p-3 bg-primary text-white text-center border rounded-3">@Model.Description</p>
        </div>
    </div>
</div>

<!-- Offcanvas for more options -->
<div class="offcanvas offcanvas-start text-white" data-bs-scroll="true" style="background-color: #0d1117;" tabindex="-1"
    id="offcanvasEmployerOptions" aria-labelledby="offcanvasEmployerOptionsLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasEmployerOptionsLabel">More options</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="d-flex justify-content-center mb-5">
            <a asp-action="EditEmployerProfile" asp-controller="Employer" asp-route-userId="@Model.UserId"
                class="text-decoration-none text-white">Edit Profile</a>
        </div>

        <div class="d-flex justify-content-center mt-5">
            <a asp-action="ViewPostedJobs" asp-controller="Employer" asp-route-userId="@Model.Id"
                class="text-decoration-none text-white">View Posted Jobs</a>
        </div>
    </div>
</div>